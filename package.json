{
  "name": "flame-lib",
  "version": "5.5.0",
  "description": "A data model and query library for Firestore.",
  "main": "./lib/flame-lib.js",
  "repository": "git@github.com:waterstone15/flame-lib.git",
  "author": "Brian Waterstone <code@waterstone15.com>",
  "license": "MIT",
  "engines": {
    "yarn": "1"
  },
  "exports": {
    ".": {
      "import": "./build/flame-lib.js",
      "require": "./build/flame-lib.js"
    }
  },
  "scripts": {
    "prepublish": "yarn build",
    "bump": "bump --tag",
    "build:civet": "node builder.mjs",
    "build:coffee": "yarn coffee --compile --no-header --output ./build ./lib",
    "build": "run-p build:civet build:coffee",
    "go": "infisical run --env=dev node ./build/flame-lib.js",
    "s": "yarn watch",
    "test": "run-s build && mocha --require coffeescript/register --reporter list ./tests/**/*.coffee",
    "test:wip": "run-s build && mocha --require coffeescript/register --reporter list ./tests/wip.coffee",
    "watch:all": "run-p watch:build watch:coffee watch:civet",
    "watch:build": "chokidar --debounce 500 \"./build/**/*.js\" -c \"yarn go\"",
    "watch:civet": "chokidar --debounce 500 \"./lib/**/*.civet\" -c \"yarn build:civet\"",
    "watch:coffee": "chokidar --debounce 500 \"./lib/**/*.coffee\" -c \"yarn build:coffee\"",
    "watch": "run-s build watch:all"
  },
  "private": false,
  "dependencies": {
    "@stablelib/random": "^1.0.1",
    "firebase": "^9.8.2",
    "firebase-admin": "^11.5.0",
    "lodash": "^4.17.21",
    "luxon": "^3.0.4",
    "pluralize": "^8.0.0",
    "rsvp": "^4.8.5"
  },
  "devDependencies": {
    "@danielx/civet": "^0.5.82",
    "@jsdevtools/version-bump-prompt": "^6.1.0",
    "@types/lodash": "^4.14.191",
    "@types/rsvp": "^4.0.4",
    "chai": "^4.3.6",
    "chai-as-promised": "^7.1.1",
    "chokidar-cli": "^3.0.0",
    "coffeescript": "^2.7.0",
    "dotenv": "^16.0.2",
    "esbuild": "^0.17.10",
    "mocha": "^10.0.0",
    "module-alias": "^2.2.2",
    "npm-run-all": "^4.1.5",
    "typescript": "^4.9.5"
  }
}
